<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.mvargas.examen_carrito.CarritoActivity">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="@dimen/lyo_g"
        android:id="@+id/listCarrito"
        android:layout_centerHorizontal="true"
        android:background="#CCCCCC">
    </ListView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/lyo_m"
        android:id="@+id/lyoCarrito"
        android:layout_below="@id/listCarrito"
        android:layout_marginTop="@dimen/texto_ch">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvTotal"
            android:layout_alignParentRight="true"
            android:text="TOTAL: $0.00"
            android:textSize="@dimen/texto_g"
            android:layout_marginBottom="@dimen/texto_ch"
            android:textColor="#89c507"/>
        <Button
            android:layout_width="@dimen/btn_width_ch"
            android:layout_height="wrap_content"
            android:id="@+id/btnPagarCarrito"
            android:text="@string/pagar"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tvTotal"
            android:layout_centerVertical="true"/>


    </RelativeLayout>

</RelativeLayout>
